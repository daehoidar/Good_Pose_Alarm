<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fortOrBackButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LeaderboardLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#514C4C">

        <Button
            android:id="@+id/goToMainButton"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="278dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Main"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/leaderboardText1"
            android:layout_width="288dp"
            android:layout_height="60dp"
            android:layout_marginStart="66dp"
            android:layout_marginTop="144dp"
            android:layout_marginEnd="57dp"
            android:layout_marginBottom="527dp"
            android:gravity="center"
            android:text="기록 안됨"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/leaderboardText2"
            android:layout_width="288dp"
            android:layout_height="60dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="58dp"
            android:layout_marginBottom="431dp"
            android:gravity="center"
            android:text="기록 안됨"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/leaderboardText3"
            android:layout_width="288dp"
            android:layout_height="60dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="350dp"
            android:layout_marginEnd="59dp"
            android:layout_marginBottom="321dp"
            android:gravity="center"
            android:text="기록 안됨"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/leaderboardText4"
            android:layout_width="288dp"
            android:layout_height="60dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="455dp"
            android:layout_marginEnd="61dp"
            android:layout_marginBottom="216dp"
            android:gravity="center"
            android:text="기록 안됨"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/leaderboardText5"
            android:layout_width="288dp"
            android:layout_height="60dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="553dp"
            android:layout_marginEnd="59dp"
            android:layout_marginBottom="118dp"
            android:gravity="center"
            android:text="기록 안됨"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/MainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#514C4C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <SurfaceView
            android:id="@+id/cameraView"
            android:layout_width="1mm"
            android:layout_height="1mm"

            tools:layout_editor_absoluteY="92dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="309dp"
            android:layout_height="550dp"
            android:layout_marginStart="59dp"
            android:layout_marginTop="85dp"
            android:src="?attr/colorBackgroundFloating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/goodOrBadText"
            android:layout_width="141dp"
            android:layout_height="52dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="93dp"
            android:gravity="center"
            android:text="스위치 꺼짐 "
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/classificationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="277dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="47dp"
            android:text="On/Off"
            android:textColor="#FFFFFF"
            android:textOff="Off"
            android:textOn="On"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/goToLeaderboardButton"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="272dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="22dp"
            android:text="Leaderboard"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/frontOrBackButton"
            android:layout_width="106dp"
            android:layout_height="41dp"
            android:layout_marginStart="41dp"
            android:layout_marginBottom="5dp"
            android:onClick="setFrontOrBack"
            android:text="정면 / 후면"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Chronometer
            android:id="@+id/countBestTimeChronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="209dp"
            android:layout_marginBottom="45dp"
            android:format="현재기록 : %s"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>